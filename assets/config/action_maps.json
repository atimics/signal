{
  "version": "1.0",
  "description": "SIGNAL Input Action Maps - Sprint 25 Implementation",
  "contexts": {
    "gameplay": {
      "description": "6DOF spaceship flight controls",
      "actions": {
        "thrust_forward": [
          {"device": "keyboard", "key": "W"},
          {"device": "gamepad", "axis": 5, "scale": 1.0}
        ],
        "thrust_back": [
          {"device": "keyboard", "key": "S"},
          {"device": "gamepad", "axis": 4, "scale": 1.0}
        ],
        "pitch_up": [
          {"device": "keyboard", "key": "up"},
          {"device": "gamepad", "axis": 3, "scale": -1.0}
        ],
        "pitch_down": [
          {"device": "keyboard", "key": "down"},
          {"device": "gamepad", "axis": 3, "scale": -1.0}
        ],
        "yaw_left": [
          {"device": "keyboard", "key": "A"},
          {"device": "gamepad", "axis": 2, "scale": 1.0}
        ],
        "yaw_right": [
          {"device": "keyboard", "key": "D"},
          {"device": "gamepad", "axis": 2, "scale": 1.0}
        ],
        "roll_left": [
          {"device": "keyboard", "key": "Q"},
          {"device": "gamepad", "axis": 0, "scale": 1.0},
          {"device": "gamepad", "button": 4}
        ],
        "roll_right": [
          {"device": "keyboard", "key": "E"},
          {"device": "gamepad", "axis": 0, "scale": 1.0},
          {"device": "gamepad", "button": 5}
        ],
        "vertical_up": [
          {"device": "keyboard", "key": "space"},
          {"device": "gamepad", "axis": 1, "scale": -1.0}
        ],
        "vertical_down": [
          {"device": "keyboard", "key": "ctrl"},
          {"device": "gamepad", "axis": 1, "scale": -1.0}
        ],
        "boost": [
          {"device": "keyboard", "key": "shift"},
          {"device": "gamepad", "button": 0}
        ],
        "brake": [
          {"device": "keyboard", "key": "X"},
          {"device": "gamepad", "button": 1}
        ]
      }
    },
    "menu": {
      "description": "Menu navigation controls",
      "actions": {
        "ui_up": [
          {"device": "keyboard", "key": "up"},
          {"device": "keyboard", "key": "W"},
          {"device": "gamepad", "axis": 3, "scale": -1.0}
        ],
        "ui_down": [
          {"device": "keyboard", "key": "down"},
          {"device": "keyboard", "key": "S"},
          {"device": "gamepad", "axis": 3, "scale": 1.0}
        ],
        "ui_left": [
          {"device": "keyboard", "key": "left"},
          {"device": "keyboard", "key": "A"},
          {"device": "gamepad", "axis": 2, "scale": -1.0}
        ],
        "ui_right": [
          {"device": "keyboard", "key": "right"},
          {"device": "keyboard", "key": "D"},
          {"device": "gamepad", "axis": 2, "scale": 1.0}
        ],
        "ui_confirm": [
          {"device": "keyboard", "key": "enter"},
          {"device": "keyboard", "key": "space"},
          {"device": "gamepad", "button": 0}
        ],
        "ui_cancel": [
          {"device": "keyboard", "key": "escape"},
          {"device": "gamepad", "button": 1}
        ],
        "ui_menu": [
          {"device": "keyboard", "key": "tab"},
          {"device": "gamepad", "button": 7}
        ]
      }
    }
  },
  "user_customizations": {
    "comment": "User can override bindings here",
    "version": "1.0",
    "last_modified": "2025-07-08",
    "overrides": []
  }
}